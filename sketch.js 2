let x = 300;
let y = 300;
let d = 100; 
let label = "Hola";
let counter = 0;

function setup() {
  createCanvas(600, 600);
}

function draw() {
  //background(220);
  noStroke();
  fill(random(25, 255), random(125, 180), random(26, 246),25);
  ellipse(x, y, d, d);
  
  fill(37, 255);
  textAlign(CENTER, CENTER);
  textSize(d/10);
  text(label + " " + counter, x, y);
  
  x = random(0, width);
  y = random(0, height);
  d = dist(width/2, height/2, mouseX, mouseY,);
  counter++;
  //d = d + 0.8; este y el de abajo es igual a d++ es simple economia de lenguaje
  //d += 1;
  //d++;
  //x = x + 2; el de abajo es economia para esta f√≥rmula 
  //x--;
  
}
